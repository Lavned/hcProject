<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:background="#F6F6F6"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_bg"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="数字资产第一季"/>

            <TextView
                android:id="@+id/detail_syl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="今日年华收益率"/>

            <TextView
                android:id="@+id/detail_bfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8%"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:paddingTop="40dp"
                android:layout_below="@id/detail_syl"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:layout_below="@id/detail_bfb">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分散投资"
                    android:layout_margin="5dp"
                    android:background="@mipmap/whiterecycle"
                    android:gravity="center"
                    android:paddingHorizontal="3dp"
                    android:paddingVertical="2dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优质项目"
                    android:background="@mipmap/whiterecycle"
                    android:gravity="center"
                    android:paddingHorizontal="3dp"
                    android:textSize="10sp"
                    android:paddingVertical="2dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分散投资"
                    android:background="@mipmap/whiterecycle"
                    android:gravity="center"
                    android:paddingHorizontal="3dp"
                    android:paddingVertical="2dp"
                    android:textSize="10sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">


            <LinearLayout
                android:id="@+id/bdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资币种:"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:paddingHorizontal="3dp"
                    android:paddingVertical="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/black33"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETH"
                    android:background="@mipmap/selectmain"
                    android:gravity="center"
                    android:paddingHorizontal="3dp"
                    android:textSize="10sp"
                    android:paddingVertical="2dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/main"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC"
                    android:background="@mipmap/selectblack"
                    android:gravity="center"
                    android:paddingHorizontal="3dp"
                    android:paddingVertical="2dp"
                    android:textSize="10sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black33"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BNCN"
                    android:background="@mipmap/selectblack"
                    android:gravity="center"
                    android:paddingHorizontal="3dp"
                    android:paddingVertical="2dp"
                    android:textSize="10sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black33"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tb_number"
                android:layout_below="@id/bdata"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="投资币额:"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:paddingVertical="2dp"
                android:textSize="13sp"
                android:textColor="@color/black33"/>


            <EditText
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入数量"
                android:textSize="10sp"
                android:maxLines="1"
                android:inputType="number"
                android:paddingVertical="3dp"
                android:drawablePadding="3dp"
                android:background="@null"
                android:drawableBottom="@mipmap/text_line"
                android:layout_below="@id/bdata"/>
        </RelativeLayout>


        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="117dp">

        </LinearLayout>
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/main"
                android:text="比特币搬砖"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/main_left_draw"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_6"
                android:textSize="13sp"
                android:text="@string/btbbz"
                android:layout_marginHorizontal="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/main"
                android:text="传统搬砖"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/main_left_draw"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_6"
                android:textSize="13sp"
                android:text="@string/ctbz"
                android:layout_marginHorizontal="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/main"
                android:text="比特币对冲套利"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/main_left_draw"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_6"
                android:textSize="13sp"
                android:text="@string/btbtl"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即投资"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="@mipmap/main_button"/>


    </LinearLayout>

</ScrollView>